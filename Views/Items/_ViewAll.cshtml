@model IEnumerable<CPW215_QuarterProject.Models.Item>

<h1 class="text-center">Items</h1>

<table class="table">
	<thead class="thead-light">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Seller)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				<a onclick="showInPopup('@Url.Action("AddOrEdit",null,Context.Request.Scheme)','New Item')" class="btn btn-success text-white">New Item</a>
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(sellItem => item.Name)
				</td>
				<td>
					@{ 
						if (item.Seller != null)
							Html.DisplayFor(sellItem => item.Seller.UserName);
					}
				</td>
				<td>
					@Html.DisplayFor(sellItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(sellItem => item.Description)
				</td>
				<td>
					<div>
						<a onclick="showInPopup('@Url.Action("AddOrEdit","Items",new { id = item.ItemId },Context.Request.Scheme)','Update Item')" class="btn btn-info text-white">Edit</a>
						<form asp-action="Delete" asp-route-id="@item.ItemId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
							<input type="submit" value="Delete" class="btn btn-danger" />
						</form>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>